<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white">

    <RelativeLayout
        android:id="@+id/rl_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2_home"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_header_trendsitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/user_avatar" />

        <TextView
            android:id="@+id/tv_nick_trendsitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_header_trendsitem"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_header_trendsitem"
            android:text="秋天的言语"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sign_trendsitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_header_trendsitem"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_header_trendsitem"
            android:text="未来的一切都还是未知" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/buttoncolr"
            android:text="关注"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_introduction_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_trendsitem"
        android:layout_margin="2dp"
        android:gravity="start"
        android:text="用简洁的言语，诉说原初本真的情感。远离繁杂、复归平和、回到来处，回到精神的原乡。"
        android:textColor="@color/textcolor2"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_img1_trendsitem"
        android:layout_width="226dp"
        android:layout_height="300dp"
        android:layout_below="@id/tv_introduction_trendsitem"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        android:background="@color/pink" />

    <ImageView
        android:id="@+id/iv_img2_trendsitem"
        android:layout_width="186dp"
        android:layout_height="148dp"
        android:layout_below="@id/tv_introduction_trendsitem"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/iv_img1_trendsitem"
        android:background="@color/buttoncolr" />

    <ImageView
        android:id="@+id/iv_img3_trendsitem"
        android:layout_width="186dp"
        android:layout_height="148dp"
        android:layout_below="@id/iv_img2_trendsitem"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/iv_img1_trendsitem"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/rl2_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img1_trendsitem"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_attention_trendsdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/attention"
            android:text=" 30"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line1_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl2_trendsitem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/textcolor3" />


    <TextView
        android:id="@+id/tv_mesgtitle_trendsitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line1_trendsitem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="全部评论（3）"
        android:textColor="@color/textcolor1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_allmesg_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tv_mesgtitle_trendsitem"
        android:gravity="center"
        android:text="评论区" />

    <View
        android:id="@+id/v_line2_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/tv_allmesg_trendsitem"
        android:layout_marginTop="5dp"
        android:background="@color/textcolor3" />

    <LinearLayout
        android:id="@+id/ll_trendsitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line2_trendsitem"

        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="4"
            android:background="@null"
            android:hint="发表评论...."
            android:textColorHint="@color/textcolor2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/buttoncolr"
            android:text="私信" />
    </LinearLayout>
</RelativeLayout>