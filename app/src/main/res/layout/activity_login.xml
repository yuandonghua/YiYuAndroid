<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/arrow_left_back2" />
        <!--app:srcCompat="@drawable/ic_arrow_back_white_24dp"-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="登陆"
            android:textColor="@color/textcolor1"
            android:textSize="20sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnLoginQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bg_frame"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/loginQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_login_qq" />

        <TextView
            android:id="@+id/loginQQText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loginQQ"
            android:text="QQ 登录"
            android:textColor="@color/login_icon_color"
            android:textSize="20sp" />

        <!--app:srcCompat="@drawable/ic_login_qq"-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLoginWX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bg_frame"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/loginWX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/loginWX"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_login_weixin" />
        <!--app:srcCompat="@drawable/ic_login_weixin"-->

        <TextView
            android:id="@+id/loginWXText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/loginWX"
            android:text="微信登录"
            android:textColor="@color/login_icon_color"
            android:textSize="20sp" />

        <!--app:srcCompat="@drawable/ic_login_qq"-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLoginWB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_frame"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/loginWB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_login_weibo" />
        <!--app:srcCompat="@drawable/ic_login_weibo"-->

        <TextView
            android:id="@+id/loginWBText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/loginWB"
            android:text="微博登录"
            android:textColor="@color/login_icon_color"
            android:textSize="20sp" />

        <!--app:srcCompat="@drawable/ic_login_qq"-->
    </LinearLayout>


    <TextView

        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginWay"
        android:layout_below="@+id/tvTitle"
        android:gravity="center"
        android:text="--其他登录方式请尽情期待--"
        android:textColor="@color/textcolor3"
        android:textIsSelectable="true"
        android:textSize="12sp" />

</LinearLayout>