<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_center_bg">

        <ImageView
            android:id="@+id/iv_pc_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow_left_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/shar" />

        <TextView
            android:id="@+id/tv_myCenter_UserNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="秋天的言语"
            android:textColor="#ffffff"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/iv_myCenter_userAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myCenter_UserNickName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_avatar2" />

        <TextView
            android:id="@+id/tv_myCenter_userSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_myCenter_userAvatar"
            android:layout_centerHorizontal="true"
            android:text="未来的一切都是未知"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_edit_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myCenter_userSign"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="编辑资料"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/attention_or_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_edit_userinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_star_pca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注 0"
                android:textColor="#ffffff"
                android:textSize="19sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/tv_fans_pca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝 0"
                android:textColor="#ffffff"
                android:textSize="19sp" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabl_title_pca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_pca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>